@model Oakbrook.CoffeeShop.Controllers.ProductViewModel

@{
  ViewBag.Title = "title";
  Layout = "_Layout";
}


<div class="row">
  <div class="col item-header">
    <img src="/imgs/@Model.Product.Image" />
  </div>
  <div class="col item-description">
    <h2>@Model.Product.Name</h2>
    <label>2082 kJ | 496 kcal</label>
    <p>Delicious back bacon, our famous sausage patty, cheese and a freshly cracked free-range egg. All in a soft white roll with ketchup.</p>
    <button class="btn btn-success mb-2" onclick="addToBasket(@Model.Product.Id)">Add to basket</button>
  </div>
</div>

<div class="card p-4 mt-3">
  <h4>Top Reviews</h4>
  @foreach (var comment in Model.Product.Comments)
  {
    <div class="row mt-4">
      <div class="col profile">
        <img src="@Html.Raw(comment.ProfilePicture)" class="avatar" />
        <span class="p-3" name="usernames">@Html.Raw(comment.Name)</span>
      </div>
    </div>
    <div class="row p-3">
      <div class="col" style="display: contents">
        <div class="ratings">
          <i class="fa fa-star rating-color"></i> <i class="fa fa-star rating-color"></i> <i class="fa fa-star rating-color"></i> <i class="fa fa-star rating-color"></i> <i class="fa fa-star"></i>
        </div>
        <span>@Html.Raw(comment.Summary)</span>
      </div>

    </div>
    <div class="row">
      <div class="col" name="comments">
        @Html.Raw(comment.Value)
      </div>
    </div>
  }
</div>
<div class="card p-4 mt-3">
  @await Html.PartialAsync("_CommentForm", Model.NewComment)
</div>
